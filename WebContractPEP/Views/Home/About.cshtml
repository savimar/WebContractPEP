

@using System.Web.Services.Description
@model WebContractPEP.Models.ContractTemplate
@{
    ViewBag.Title = "Blog Entry";
    Layout = "../Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Scripts/codemirror.css">
<link rel="stylesheet" type="text/css" href="~/Scripts/monokai.css">
<script type="text/javascript" src="~/Scripts/codemirror.js"></script>
<script type="text/javascript" src="~/Scripts/xml.js"></script>
<script type="text/javascript" src="~/Scripts/formatting.js"></script>

<link href="~/Scripts/summernote/summernote.css" rel="stylesheet" />
<script src="~/Scripts/summernote/summernote.js"></script>
<h2> @ViewBag.Title</h2>
<div class="row">
    <div class="col-md-12">
        <section id="loginForm">
            @using (Html.BeginForm("Index", "Home", new { ReturnUrl = ViewBag.ReturnUrl },
                FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {@Html.AntiForgeryToken() <i class="fa fa-link" aria-hidden="true"> </i><a href="http://summernote.org/"></a><hr />
            <div class="form-group">
               
          
                <div id="summernote"><p></p></div>
               
            </div>
                <div class="col-lg-3">
                    <button class="btn btn-success" id="btnSubmit" type="submit">
                        Подписать и отправить
                    </button>
                </div>
        }
        </section>
    </div>
</div>
@section Scripts {

    <script type="module">
       
       
        $(document).ready(function () {
            $('#summernote').summernote({
                height: 300,                 // set editor height
                minHeight: null,             // set minimum height of editor
                maxHeight: null,
                lang: 'ru-RU',// set maximum height of editor
                placeholder: 'Hello',
                focus: true,
                        codemirror: {
                    theme: 'monokai',
                    mode: "text/html",
                    lineNumbers: true,
                    tabMode: 'indent'
                }
            });
        });
    </script>

}