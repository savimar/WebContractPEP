@using TXTextControl.Web.MVC
@{
    ViewBag.Title = "Index";
    Layout = "../Shared/_Layout.cshtml";
}

@model WebContractPEP.Models.ContractTemplate
@section head{


}
@{
    var sDocument = "<html><body><p>Welcome to <strong>Text Control</strong></p></body></html>";
}
<div class="panel panel-primary"></div>
<div class="panel-heading panel-head">Add Content</div>
<div class="panel-body"></div>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-9">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.FinalText, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-9">
                @Html.TextAreaFor(model => model.FinalText, new { @class = "form-control", @row = 5 })
            </div>
            @Html.TXTextControl().TextControl(settings => {
                                                              settings.UserNames = new string[] { "Tim Typer" };
            }).LoadText(sDocument, TXTextControl.Web.StringStreamType.HTMLFormat).Render()

            <input type="button" onclick="insertTable()" value="Insert Table" />
            <div class="form-group">
                <div class="col-lg-9"></div>
                <div class="col-lg-3">
                    <button class="btn btn-success" id="btnSubmit" type="submit">
                        Подписать и отправить
                    </button>
                </div>
            </div>
        </div>
    </div>



    @section scripts{


        @Scripts.Render(
            "~/bundles/jqueryval",

                "~/Scripts/wysiwyg.js");
        @Styles.Render(
            "~/Content/css"
            );

    }
}

}
