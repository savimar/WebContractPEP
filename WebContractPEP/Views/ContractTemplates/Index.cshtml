@model IEnumerable<WebContractPEP.Models.ContractTemplate>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    <section class="col-md-4" aria-labelledby="gettingStartedTitle">
        <h3>Выберите Word файл для загрузки</h3>

        @using (Html.BeginForm("Upload", "ContractTemplates", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <input type="file" name="upload" /><br>

            <input type="submit" value="Загрузить" />
        }


    </section>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.ContractTemplateId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ContractTemplateId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ContractTemplateId })|
            @Html.ActionLink("Заполнить для подписания", "Details", new { id=item.ContractTemplateId }) |
        </td>
    </tr>
}

</table>
